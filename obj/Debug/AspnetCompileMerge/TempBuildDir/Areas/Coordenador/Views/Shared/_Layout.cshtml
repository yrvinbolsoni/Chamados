<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="wrapper">
        <div class="page-wrapper chiller-theme toggled">
            <nav id="sidebar" class="sidebar-wrapper">
                <div class="sidebar-content">
                    <div class="sidebar-brand">
                        <a href="#">Chamados</a>
                        <div class="text-danger" id="close-sidebar">
                            <i class="fas fa-times"></i>
                        </div>
                    </div>
                    <div class="sidebar-header">
                        <div class="user-pic">
                            <img class="img-responsive img-rounded" src="https://raw.githubusercontent.com/azouaoui-med/pro-sidebar-template/gh-pages/src/img/user.jpg"
                                 alt="User picture">
                        </div>
                        <div class="user-info">
                            <span class="user-name">
                                @User.Identity.Name.ToString().Replace(@"VMWEB\", "")
                            </span>
                            <span class="user-role">Administrator</span>
                            <span class="user-status">
                                <i class="fa fa-circle"></i>
                                <span>Online</span>
                            </span>
                        </div>
                    </div>
                    <!-- sidebar-header  -->
                    <div class="sidebar-search">
                        <div>
                            @using (Html.BeginForm("BuscaRapida", "Ticket", FormMethod.Post))
                            {
                                <div class="input-group">
                                    <input type="text" id="textoBusca" name="textoBusca" class="form-control search-menu" placeholder="Search...">
                                    <div class="input-group-append">
                                        <button tabindex="0"><span class="fa fa-search"></span></button>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                    <!-- sidebar-search  -->
                    <div class="sidebar-menu">
                        <ul>
                            <li class="sidebar-dropdown">
                                <a href="#">
                                    <i class="fa fa-folder"></i>
                                    <span>Chamados</span>

                                </a>
                                <div class="sidebar-submenu">
                                    <ul>
                                        <li>
                                            @Html.ActionLink("Novo Chamado", "Novo", "Ticket", null, new { @class = "nav-link" })
                                        </li>
                                        <li>
                                            @Html.ActionLink("Chamados em Aberto", "TicketsAberto", "Ticket", null, new { @class = "nav-link" })
                                        </li>
                                        <li>
                                            @Html.ActionLink("Meus Chamados", "Index", "Ticket", null, new { @class = "nav-link" })
                                        </li>

                                        <li>
                                            <a href="#">Buscar Chamado</a>
                                        </li>

                                    </ul>
                                </div>
                            </li>
                            <li class="sidebar-dropdown">
                                <a href="#">
                                    <i class="far fa-clipboard"></i>
                                    <span>Cadastros</span>
                                    <span class="badge badge-pill badge-success">Novo</span>

                                </a>
                                <div class="sidebar-submenu">
                                    <ul>
                                        <li class="nav-item">
                                            @Html.ActionLink("Prioridade", "Prioridades", "Cadastros", null, new { @class = "nav-link" })
                                        </li>
                                        <li class="nav-item">
                                            @Html.ActionLink("Tipo", "Tipo", "Cadastros", null, new { @class = "nav-link" })

                                        </li>
                                        <li class="nav-item">
                                            @Html.ActionLink("Status", "Status", "Cadastros", null, new { @class = "nav-link" })

                                        </li>
                                        <li class="nav-item">
                                            @Html.ActionLink("Classificão", "Classificacao", "Cadastros", null, new { @class = "nav-link" })

                                        </li>
                                        <li class="nav-item">
                                            @Html.ActionLink("SubClassificão", "SubClassificacao", "Cadastros", null, new { @class = "nav-link" })
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li class="sidebar-dropdown">
                                <a href="#">
                                    <i class="fa fa-chart-bar"></i>
                                    <span>Relatorios</span>
                                </a>
                                <div class="sidebar-submenu">
                                    <ul>
                                        <li>
                                            <a href="#">Relatorios de Chamados</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                    <!-- sidebar-menu  -->
                </div>
                <!-- sidebar-content  -->
                <div class="sidebar-footer">
                    <a href="#">
                        <i class="fa fa-bell"></i>
                        <span class="badge badge-pill badge-warning notification">3</span>
                    </a>
                    <a href="#">
                        <i class="fa fa-envelope"></i>
                        <span class="badge badge-pill badge-success notification">7</span>
                    </a>
                    <a href="#">
                        <i class="fa fa-cog"></i>
                        <span class="badge-sonar"></span>
                    </a>
                    <a href="#">
                        <i class="fa fa-power-off"></i>
                    </a>
                </div>
            </nav>
            
            <!-- Page Content Holder -->
            <main class="page-content">
                <div class="container-fluid">
                    <a id="show-sidebar"  href="#">
                        <img class="img-responsive img-rounded" src="~/Content/img/logo-grieg.png"
                             alt="User picture">
                    </a>
                   <hr />
                    @RenderBody()
                </div>
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Sistema de Chamados GRIEG</p>
                </footer>
            </main>
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
</body>
</html>
